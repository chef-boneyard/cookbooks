<stores>
  <% node[:voldemort][:stores].each do |store| -%>
  <store>
    <name><%= store %></name>
    <persistence><%= node[:voldemort][:storage] %></persistence>
    <routing>client</routing>
    <replication-factor>1</replication-factor>
    <required-reads>1</required-reads>
    <required-writes>1</required-writes>
    <key-serializer>
      <type>string</type>
    </key-serializer>
    <value-serializer>
      <type>string</type>
    </value-serializer>
  </store>
  <% end -%>
  <% node[:voldemort][:views].each do |view| -%>
  <view>
    <name><%= view %></name>
    <view-of>test1</view-of>
    <view-class>
      voldemort.store.views.UpperCaseView
    </view-class>
    <value-serializer>
      <type>string</type>
    </value-serializer>
  </view>
  <% end -%>
</stores>
