server {
  server_name www.doat.com prod.doat.com www.prod.doat.com;
  listen 80;
  root /opt/doat/www/app/webroot;
  error_log <%= node[:nginx][:log_dir] %>/www.doat.com_error.log;
  access_log <%= node[:nginx][:log_dir] %>/www.doat.com_access.log;
  location ~ "\.svn" {
    deny all;
  }
  location / {
    index index.php;
    try_files $uri /index.php?url=$uri&$args;
  }
  location /favicon.ico {
  }
  location ~ .*\.php(/.*)?$ {
    include fastcgi_params;
    fastcgi_pass <%= if node[:php][:cgi][:binaddress].start_with?("/"); "unix:"; else ""; end + node[:php][:cgi][:bindaddress] %>;
    fastcgi_split_path_info ^(.+\.php)(.*)$;
    fastcgi_param SCRIPT_NAME     $fastcgi_script_name;
    fastcgi_param PATH_INFO       $fastcgi_path_info;
    fastcgi_param PATH_TRANSLATED $document_root$fastcgi_path_info;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    fastcgi_pass_header       Set-Cookie;
  }
}

server {
  listen 80;
  server_name doat.com;
  rewrite ^/(.*) http://www.doat.com/$1 permanent;
}
