server {
  server_name developer.doat.com;
  listen 80;
  root /opt/doat/www/gondor;
  error_log <%= node[:nginx][:log_dir] %>/developer.doat.com_error.log;
  access_log <%= node[:nginx][:log_dir] %>/developer.doat.com_access.log;
  rewrite ^/min/([a-z]=.*) /min/index.php?$1 last;
  location ~ "\.svn" {
    deny all;
  }
  location / {
    index index.php;
    try_files $uri /index.php?r=$uri&$args;
  }
  location /favicon.ico {
  }
  location ~ .*\.php(/.*)?$ {
    include fastcgi_params;
    fastcgi_pass <%= if node[:php][:cgi][:binaddress].start_with?("/"); "unix:"; else ""; end + node[:php][:cgi][:bindaddress] %>;
    fastcgi_split_path_info ^(.+\.php)(.*)$;
    fastcgi_param SCRIPT_NAME     $fastcgi_script_name;
    fastcgi_param PATH_INFO       $fastcgi_path_info;
    fastcgi_param PATH_TRANSLATED $document_root$fastcgi_path_info;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    fastcgi_pass_header       Set-Cookie;
  }
}

