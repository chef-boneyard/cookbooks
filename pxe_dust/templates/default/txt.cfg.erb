  localboot 0
default install
label install
	menu label ^Install-Opscode
	menu default
	kernel ubuntu-installer/<%= node[:pxe_dust][:arch] %>/linux
	append auto=true priority=critical interface=eth0 vga16fb.modeset=0 initrd=ubuntu-installer/<%= node[:pxe_dust][:arch] %>/initrd.gz netcfg/disabledhcp=false locale=en_US console-setup/ask_detect=false console-setup/layoutcode=us netcfg/get_hostname=dummy netcfg/chooseinterface=eth0 url=http://<%= node[:ipaddress] %>/preseed.cfg DEBCONF_INTERFACE=noninteractive
label cli
	menu label ^Command-line install
	kernel ubuntu-installer/<%= node[:pxe_dust][:arch] %>/linux
	append tasks=standard pkgsel/language-pack-patterns= pkgsel/install-language-support=false vga=788 initrd=ubuntu-installer/<%= node[:pxe_dust][:arch] %>/initrd.gz -- quiet 
